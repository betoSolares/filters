<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Filters.Views.Output.Output">
    <!-- Animation -->
    <UserControl.Styles>
        <Style Selector="Image.Rotating">
            <Style.Animations>
              <Animation Duration="0:0:4"
                         IterationCount="Infinite">
                <KeyFrame Cue="0%">
                  <Setter Property="RotateTransform.Angle" Value="0" />
                </KeyFrame>
                <KeyFrame Cue="100%">
                  <Setter Property="RotateTransform.Angle" Value="360" />
                </KeyFrame>
              </Animation>
            </Style.Animations>
        </Style>
    </UserControl.Styles>

    <StackPanel>
        <!-- Genrate Button -->
        <Button Click="GenerateNewImage"
                Content="Generate New Image"
                HorizontalAlignment="Center"
                Margin="5"
                Name="GenerateBtn" />

        <!-- Error TextBox -->
        <TextBox IsReadOnly="true"
                 IsVisible="{Binding Output.ShowError}"
                 Margin="75,5"
                 Name="ErrorTextBox"
                 Text="{Binding Output.ErrorMsg}" />

        <!-- Loader -->
        <Image Classes="Rotating"
               Height="125"
               IsVisible="{Binding Output.Loading}"
               Name="Loader"
               HorizontalAlignment="Center"
               Source="/assets/loader.png"
               Width="500" />
    </StackPanel>
</UserControl>
